# DenialOps Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (Required for LLM features)
# =============================================================================

# LLM provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI API key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Anthropic API key (required if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# LLM model to use
# OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo
# Anthropic: claude-3-5-sonnet-20241022, claude-3-opus-20240229
LLM_MODEL=gpt-4o

# =============================================================================
# Optional
# =============================================================================

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Artifacts storage path (default: ./artifacts)
ARTIFACTS_PATH=./artifacts

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Maximum file upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# Artifact retention days (0 = never delete)
ARTIFACT_RETENTION_DAYS=7
